<script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
<script>
  (function(win,doc) {
    var ua = navigator.userAgent.toLowerCase(),
            browser = {
              ios: /iphone|ipod|ipad/i.test(ua),
              android: /android/i.test(ua),
              wechat: /micromessenger/i.test(ua),
              weibo: /weibo/i.test(ua)
            };
    win.browser = browser;
    var download_wrap = doc.querySelectorAll('.download-wrap');
    var dlUrl = {
      // ios app store
      appStore: 'https://appsto.re/cn/w8JQ1.i',
      // android 普通下载地址
      android: '',
      // 应用宝，针对微信打开
      appBao: 'http://a.app.qq.com/o/simple.jsp?pkgname=cn.cstonline.kartor3&g_f=991653'
    };
    var platformText = {
      ios: 'iphone',
      android: 'android'
    };
    var supportText = {
      ios: '适用于iOS7.0及以上',
      android: '适用于Android4.0.3及以上',
      pc: '适用于 Android4.0.3 / iOS7.0 及以上'
    };
    var isWechat = browser.wechat,
            isIos = browser.ios,
            isAndroid = browser.android;
    var html = '', url = '';
    $.ajax({
      url: "http://oss.kartor.cn/ocos/appinfo/findAppPackageUrlJsonp",
      type: 'get',
      dataType: 'jsonp',
      data: {
        'appPackageName': 'cn.kartor.kartor3',
        'phoneType': 1
      },
      jsonp: 'callback',
      jsonpCallback: "success_jsonpCallback"
    }).then(function(res_ios) {
      $.ajax({
        url: "http://oss.kartor.cn/ocos/appinfo/findAppPackageUrlJsonp",
        type: 'get',
        dataType: 'jsonp',
        data: {
          'appPackageName': 'cn.cstonline.kartor3',
          'phoneType': 2
        },
        jsonp: 'callback',
        jsonpCallback: "success_jsonpCallback"
      }).then(function (res_android) {
        if (res_android.code == 0) {
          dlUrl.android = res_android.data;
        }
        if (res_ios.code == 0) {
          dlUrl.appStore = res_ios.data;
        }
        if (isIos || isAndroid) {
          // mobile
          var platform = isIos ? platformText.ios : platformText.android,
                  support = isIos ? supportText.ios : supportText.android;
          if (isWechat) {
            url = dlUrl.appBao;
          } else if (isIos) {
            url = dlUrl.appStore;
          } else {
            url = dlUrl.android;
          }
          html = '<a class="download-btn ' + platform + '" href="' + url + '"></a>' +
                  '<p class="platform">' + support + '</p>';
        } else {
          // pc
          html = '<a class="download-btn android" href="' + dlUrl.android + '"></a>' +
                  '<a class="download-btn iphone" href="' + dlUrl.appStore + '"></a>' +
                  '<div class="download-btn qrcode">' +
                  '<div class="qrcode-wrap"><img src="assets/images/qr"></div><span>扫描下载</span>' +
                  '</div>' +
                  '<div class="platform">' +
                  '<p>' + supportText.pc + '</p>' +
                  '</div>';
        }
        [].forEach.call(download_wrap, function (item) {
          item.innerHTML = html;
        });
        console.log(res_android);
        console.log(res_ios);
        if(isWechat){
          doc.querySelector('a.iphone').click();
        }
      })
    });
  })(window,document);
</script>
